<?xml version="1.0" encoding='UTF-8'?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 	xmlns:xi="http://www.w3.org/2001/XInclude"
 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 					 
	<application>
		<message-bundle>messages</message-bundle>
		<locale-config>
			<default-locale>zh</default-locale>
			<supported-locale>zh_CN</supported-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

	<factory> 
	  <exception-handler-factory> 
	    com.wcs.base.exception.jsf.ExceptionHandlerFactory 
	  </exception-handler-factory> 
	</factory>
	<validator>
		<validator-id>doubleValidation</validator-id>
		<validator-class>com.wcs.ncp.common.util.DoubleValidation</validator-class>
	</validator>
	
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginBean.userLogin}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/template/template.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.userLogin}</from-action>
			<from-outcome>failured</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/template/template.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginBean.doLogout}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
</faces-config>
