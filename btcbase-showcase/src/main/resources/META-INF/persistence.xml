	<persistence-unit name="pu" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>jdbc/btcbase</jta-data-source>
        <class>com.wcs.base.entity.IdEntity</class>
        <class>com.wcs.base.entity.BaseEntity</class>
        <class>com.wcs.base.security.model.Permission</class>
        <class>com.wcs.base.security.model.Resource</class>
        <class>com.wcs.base.security.model.Role</class>
        <class>com.wcs.base.security.model.User</class>
        <class>com.wcs.base.dict.model.Dict</class>
		<properties>
      	   <!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables" /> -->
            <property name="eclipselink.ddl-generation" value="update" />
            <property name="eclipselink.ddl-generation.output-mode" value="database" /> 
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
		</properties>
	</persistence-unit>

</persistence>